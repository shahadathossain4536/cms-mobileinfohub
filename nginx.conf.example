# ====================================
# Nginx Configuration for MobileInfoHub CMS
# React Frontend Application
# ====================================
#
# Usage:
# 1. Copy this file to Nginx sites-available:
#    sudo cp nginx.conf.example /etc/nginx/sites-available/cms-mobileinfohub
#
# 2. Edit the file and replace:
#    - cms.yourdomain.com with your actual domain
#
# 3. Enable the site:
#    sudo ln -s /etc/nginx/sites-available/cms-mobileinfohub /etc/nginx/sites-enabled/
#
# 4. Test and reload:
#    sudo nginx -t
#    sudo systemctl reload nginx
#
# 5. Setup SSL (HTTPS):
#    sudo certbot --nginx -d cms.yourdomain.com
#
# ====================================

server {
    listen 80;
    listen [::]:80;
    
    # Change this to your domain or subdomain
    server_name cms.yourdomain.com;
    
    # If using IP address only (for testing), comment above line and uncomment below:
    # server_name _;

    # Root directory for the React build files
    root /var/www/cms-mobileinfohub/html;
    index index.html;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    
    # CSP header for React app
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline' 'unsafe-eval'" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;

    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # React Router - handle client-side routing
    location / {
        try_files $uri $uri/ /index.html;
        
        # Add headers for the main app
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Disable caching for index.html
    location = /index.html {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Block access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ /\.git {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ /\.env {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Manifest and service worker
    location ~* (manifest\.json|service-worker\.js)$ {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # Robots.txt
    location = /robots.txt {
        return 200 "User-agent: *\nDisallow: /\n";
        add_header Content-Type text/plain;
    }

    # Access logs
    access_log /var/log/nginx/cms-mobileinfohub.access.log;
    error_log /var/log/nginx/cms-mobileinfohub.error.log warn;
}

# ====================================
# Alternative: Serve on specific port
# ====================================
#
# If you want to serve the CMS on a specific port (e.g., 3322):
#
# server {
#     listen 3322;
#     listen [::]:3322;
#     
#     server_name _;
#     
#     root /var/www/cms-mobileinfohub/html;
#     index index.html;
#     
#     location / {
#         try_files $uri $uri/ /index.html;
#     }
#     
#     # ... rest of configuration
# }
#
# ====================================

